model OrderPayment {
  id String @id @default(cuid())

  orderHeaderId String
  orderHeader   OrderHeader @relation(fields: [orderHeaderId], references: [id], onDelete: Cascade)

  amount               Int
  paymentMethod        String // cash, card, bank_transfer, mobile_payment, etc.
