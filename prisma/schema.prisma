  confirmedAt DateTime?
  releasedAt  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([inventoryItemId])
  @@index([orderHeaderId])
  @@map("inventory_reservations")
}

// ==================== DEPARTMENT STOCK TRANSFERS ====================

