# Database
DATABASE_URL="postgresql://user:password@localhost:5432/hotel_manager"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
API_SECRET_KEY="your-secret-key-here"

# Environment
NODE_ENV="development"

# Authentication / JWT (generate strong secrets and do NOT commit real secrets)
# Use a secure generator, e.g. `node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"`
JWT_SECRET=<GENERATE_STRONG_SECRET>
REFRESH_SECRET=<GENERATE_STRONG_SECRET>

# Token expiry (in seconds)
ACCESS_TOKEN_EXPIRES_IN=3600
REFRESH_TOKEN_EXPIRES_IN=604800

# App URLs
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE=/api

# Cookie settings (set COOKIE_SECURE=true in production)
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Optional: seeded admin for demo only
ADMIN_SEED_EMAIL=admin@hotelmanager.local
ADMIN_SEED_PASSWORD=admin123456
